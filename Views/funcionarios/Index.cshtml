@model IEnumerable<WebApplication1.Models.funcionarios>

@{
    ViewData["Title"] = "Cadastro de Funcionario";
 
}

<h1>Cadastro de Funcionario</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Criar novo</a>
</p>
<form asp-controller="funcionarios" asp-action="Index" method="get">
    <p>
        <input class="pesquisar" placeholder="Pesquisar Funcionario:" type="text" name="SearchString">
        <input class="pesquisar2" type="submit" value="Buscar" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CPF)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Entrada)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Funcao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Turno)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Salario)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CPF)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Entrada)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Funcao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Turno)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Salario)
            </td>
            <td>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.FuncID">Editar</a>
                <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.FuncID">Detalhes</a>
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.FuncID">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
