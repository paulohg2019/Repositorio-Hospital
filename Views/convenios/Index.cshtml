@model IEnumerable<WebApplication1.Models.convenios>

@{
    ViewData["Title"] = "Cadastro de Convenios";
}

<h1>Cadastrar novo Convenio</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Criar novo</a>
</p>

<form asp-controller="convenios" asp-action="Index" method="get">
    <p>
        <input class="pesquisar" placeholder="Pesquisar Convenio:" type="text" name="SearchString">
        <input class="pesquisar2" type="submit" value="Buscar" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Empresa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CNPJ)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.desconto)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Empresa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CNPJ)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.desconto)
            </td>
            <td>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.ConvID">Editar</a>
                <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.ConvID">Detalhes</a>
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.ConvID">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
