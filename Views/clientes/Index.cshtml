@model IEnumerable<WebApplication1.Models.clientes>

@{
    ViewData["Title"] = "Cadastro de Pacientes";
}

<h1>Cadastro de Pacientes</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Criar novo</a>
</p>

<form asp-controller="clientes" asp-action="Index" method="get">
    <p>
        <input class="pesquisar" placeholder="Pesquisar Paciente:" type="text" name="SearchString">
      <input class="pesquisar2" type="submit" value="Buscar" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CPF)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Convenio)
            </th>    
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CPF)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Convenio)
            </td>
            <td>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.ClienteID">Editar</a> 
                <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.ClienteID">Detalhes</a> 
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.ClienteID">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
