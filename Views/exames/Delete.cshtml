@model WebApplication1.Models.exames

@{
    ViewData["Title"] = "Deletar";
}

<h3>Quer mesmo deletar esse registro?</h3>
<div>
    <h4>Exame</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ExameName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ExameName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NomeMedico)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NomeMedico)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NomePaciente)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NomePaciente)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ReleaseDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ReleaseDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Hora)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Hora)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ExameID" />
        <input type="submit" value="Deletar" class="btn btn-danger" /> |
        <input type="submit" value="Voltar" class="btn btn-primary" asp-action="Index" />
    </form>
